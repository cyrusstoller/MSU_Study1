<h1 class="no-top">Listing participants</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Session</th>
      <th>Ip address</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Instructor</th>
      <th>Email</th>
      <th>Created At</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.id %></td>
        <td><%= participant.session_id %></td>
        <td><%= participant.ip_address %></td>
        <td><%= participant.first_name %></td>
        <td><%= participant.last_name %></td>
        <td><%= participant.instructor %></td>
        <td><%= participant.email %></td>
        <td><%= participant.created_at %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Participant', new_participant_path, :class => "btn btn-default" %>
