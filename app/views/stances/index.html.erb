<h1>Listing stances</h1>

<table>
  <thead>
    <tr>
      <th>Participant</th>
      <th>Supporting</th>
      <th>Statement</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stances.each do |stance| %>
      <tr>
        <td><%= stance.participant_id %></td>
        <td><%= stance.supporting %></td>
        <td><%= stance.statement %></td>
        <td><%= link_to 'Show', stance %></td>
        <td><%= link_to 'Edit', edit_stance_path(stance) %></td>
        <td><%= link_to 'Destroy', stance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

